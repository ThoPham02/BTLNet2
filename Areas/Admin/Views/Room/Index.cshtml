@model IEnumerable<HotelManagement.Areas.Admin.Models.RoomViews>

<div class="admin_home">
    <div class="home_header">
        <div class="home_title">
            <i class="fas fa-door-open"></i>
            Quản Lý Phòng
        </div>
        <div class="home_add">

        </div>
    </div>
    <div class="search">
        <form action="" class="search_form">
            <div class="form-group col-3">
                <label for="exampleFormControlInput1">Tên Phòng</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" value="@ViewBag.customer">
            </div>
            <div class="form-group col-3">
                <label for="exampleFormControlInput1">Trạng Thái</label>
                <select class="form-control " id="exampleFormControlSelect1">
                    <option>Tất cả trạng thái</option>
                    <option>Chờ check-in</option>
                    <option>Đang sử dụng</option>
                    <option>Đã hoàn thành</option>
                </select>
            </div>
            <div class="search_btn" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </form>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col-1" class="fw-regular text-center">STT</th>
                <th scope="col-1" class="fw-regular text-center">@Html.DisplayNameFor(model => model.RoomName)</th>
                <th scope="col-1" class="fw-regular text-center">@Html.DisplayNameFor(model => model.RoomType)</th>
                <th scope="col-1" class="fw-regular text-center">@Html.DisplayNameFor(model => model.Price)</th>
                <th scope="col-1" class="fw-regular text-center">@Html.DisplayNameFor(model => model.State)</th>
                <th scope="col-1" class="fw-regular text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row" class="text-center">@(Model.ToList().IndexOf(item) + 1)</th>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RoomName)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RoomType)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Price)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.State)</td>
                    <td class="text-center">
                        <i class="fa-solid fa-bars"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>