@model IEnumerable<HotelManagement.Models.Customers>

@{
    ViewData["Title"] = "Index";
}
<div class="home_header">
    <div class="home_title">
        <i class="fa-solid fa-book"></i>
        Khách hàng
    </div>
    <div class="home_add">
        <a asp-action="Create" style="text-decoration: none; color: black;">Thêm Mới</a>
    </div>
</div>

<div class="search">
    <form action="" class="search_form">
        <div class="form-group col-4">
            <label for="exampleFormControlInput1">Tên Khách Hàng</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="@ViewBag.customer">
        </div>
        <div class="form-group col-3">
            <label for="exampleFormControlInput1">Số điện thoại</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" value="@ViewBag.customer">
        </div>
        <div class="search_btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Tài Khoản
            </th>
            <th>
                Họ Và Tên
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Thao tác
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(Model.ToList().IndexOf(item) + 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CustomerID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CustomerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
