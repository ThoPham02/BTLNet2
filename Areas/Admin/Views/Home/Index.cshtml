@model IEnumerable<HotelManagement.Areas.Admin.Models.RoomBookingViews>

<div class="admin_home">
    <div class="home_header">
        <div class="home_title">
            <i class="fa fa-home"></i>
            Quản Lý Check-In
        </div>
        <div class="home_add">
            Thêm Mới
        </div>
    </div>
    <div class="search">
        <form action="" class="search_form">
            <div class="form-group col-4">
                <label for="exampleFormControlInput1">Tên Khách Hàng</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" value="@ViewBag.customer">
            </div>
            <div class="form-group col-3">
                <label for="exampleFormControlInput1">Tên Phòng</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" value="@ViewBag.customer">
            </div>
            <div class="form-group col-3">
                <label for="exampleFormControlInput1">Trạng Thái</label>
                <select class="form-control " id="exampleFormControlSelect1">
                    <option>Tất cả trạng thái</option>
                    <option>Chờ check-in</option>
                    <option>Đang sử dụng</option>
                    <option>Đã hoàn thành</option>
                    <option>Đã hủy</option>
                </select>
            </div>
            <div class="search_btn" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </form>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col-1" class="fw-regular text-center">STT</th>
                <th scope="col-1" class="fw-regular text-center">Phòng</th>
                <th scope="col-2" class="fw-regular text-center">Ngày nhận</th>
                <th scope="col-2" class="fw-regular text-center">Ngày trả</th>
                <th scope="col-3" class="fw-regular text-center">Khách</th>
                <th scope="col-1" class="fw-regular text-center">Số điện thoại</th>
                <th scope="col-1" class="fw-regular text-center">Trạng thái</th>
                <th scope="col-1" class="fw-regular text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row" class="text-center">@(Model.ToList().IndexOf(item) + 1)</th>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.RoomName)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.TimeStart)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.TimeEnd)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.Customer)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td class="text-center">@Html.DisplayFor(modelItem => item.BookingStatus)</td>
                    <td class="text-center">
                        <i class="fa-solid fa-bars"></i>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>