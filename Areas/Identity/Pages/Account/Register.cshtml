@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="bg-image">
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal form" role="form">
                <h1>Tạo Tài Khoản</h1>
                <span>Sử dụng email của bạn để đăng ký tài khoản mới</span>
                <input asp-for="Input.Email" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <input asp-for="Input.Password" placeholder="Mật khẩu" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <input type="password" asp-for="Input.ConfirmPassword" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <button type="submit">Đăng ký</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1 style="margin-bottom: 70px;">Chào Mừng <br>Trở Lại</h1>
                    <p>Xin vui lòng đăng nhập để giữ liên kết với chúng tôi</p>
                    <a class="nav-link fw-bold btn-light" style="padding: 12px 24px; border-radius: 12px;"
                        asp-page="./Login">Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
