@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="bg-image">
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form method="post"
                class="form-horizontal form" role="form">
                <h1>Đăng nhập</h1>
                <span>Sử dụng tài khoản email của bạn</span>
                <input asp-for="Input.Email" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <input type="password" asp-for="Input.Password" placeholder="Mật khẩu" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <a asp-page="./ForgotPassword">Quên mật khẩu?</a>
                <button type="submit">Đăng nhập</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1 style="margin-bottom: 50px;">Chào Mừng Quý Khách</h1>
                    <p>Đăng ký trở thành thành viên của khách sạn để được hưởng những ưu đãi hấp dẫn</p>
                    <a class="nav-link fw-bold btn-light" style="padding: 12px 24px; border-radius: 12px;"
                        asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký</a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
