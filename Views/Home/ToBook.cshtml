@using (Html.BeginForm("DisplayAvailableRooms", "Home", FormMethod.Post))
{
    <div class="container form-search">
        <div class="search_date">
            <div style="margin-right: 60px">
                <label>Thời gian nhận phòng:</label>
                <input type="date" />
            </div>
            <div style="margin-right: 20px">
                <label>Thời gian trả phòng:</label>
                <input type="date" />
            </div>
        </div>

        <a asp-controller="Home" asp-action="DisplayAvailableRooms">
            <button class="btn_s">Tìm kiếm</button>
        </a>

    </div>
}

@if (Model != null  && Model.Any())
{
    @foreach (var item in Model)
    {
        var room = item.Room;
        var roomType = item.RoomType;
        <div class="room-cash">
            <img src="~/imgs/PL1_1.jpg" alt="" class="room_img">
            <div class="room_des">
                <p style="margin: 10px 5px 5px 5px">
                    <span style="color: rgb(185, 138, 138); text-decoration: underline; font-size: 19px">Mô tả: </span>
                    @roomType.Description
                </p>
                <p style="margin: 10px 5px 5px 5px">
                    <span style="color: rgb(185, 138, 138); text-decoration: underline; font-size: 19px">Tên phòng:
                    </span>
                    @room.Name
                </p>
                <p style="margin: 10px 5px 5px 5px">
                    <span style="color: rgb(185, 138, 138); text-decoration: underline; font-size: 19px">Loại phòng:
                    </span>
                    @roomType.TypeName
                </p>
            </div>
            <p style="color: rgb(206, 169, 169); text-decoration: underline; font-size: 19px;">
                @roomType.Price
            </p>
            <button class="room_btn">Chọn phòng</button>
        </div>
    }
}
else
{
    <p>No data available.</p>
}
